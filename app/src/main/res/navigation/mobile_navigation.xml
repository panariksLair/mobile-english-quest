<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.github.panarik.learningenglishquiz.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/to_downloadingFragment"
            app:destination="@id/downloadingFragment"></action>
        <argument
            android:name="testArgument"
            android:defaultValue=""
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.github.panarik.learningenglishquiz.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.github.panarik.learningenglishquiz.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/downloadingFragment"
        android:name="com.github.panarik.learningenglishquiz.ui.downloading.DownloadingFragment"
        android:label="fragment_downloading"
        tools:layout="@layout/fragment_downloading">
        <action
            android:id="@+id/to_homeFragment"
            app:destination="@id/nav_home"></action>
        <argument
            android:name="testArgument"
            android:defaultValue=""
            app:argType="string" />

    </fragment>
</navigation>